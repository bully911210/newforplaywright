# ── MMX Login Credentials ──────────────────────────────────────────
MMX_USERNAME=your_username
MMX_PASSWORD="your_password"
MMX_BASE_URL=https://www.mmxsystems.co.za

# ── Google Sheet API ──────────────────────────────────────────────
# Deploy code.gs as a Google Apps Script Web App and paste the URL here.
GOOGLE_SHEET_WEBAPP_URL=https://script.google.com/macros/s/YOUR_DEPLOYMENT_ID/exec

# Column-to-field mapping (matches your Google Sheet header layout).
# Column A = status flag, B-S = client data fields.
COLUMN_MAPPING={"A":"status","B":"clientName","C":"clientSurname","D":"idNumber","E":"cellphone","F":"email","G":"address","H":"city","I":"province","J":"postalCode","K":"accountHolder","L":"bank","M":"accountNumber","N":"accountType","O":"contractAmount","P":"paymentFrequency","Q":"debitOrderDate","R":"dateSaleMade","S":"agent"}

# ── Browser Settings ──────────────────────────────────────────────
HEADLESS=false
USER_DATA_DIR=user-data-3
NAVIGATION_TIMEOUT=30000
ACTION_TIMEOUT=10000

# ── Polling ───────────────────────────────────────────────────────
POLL_INTERVAL_MS=30000
AUTO_START_POLLING=true
